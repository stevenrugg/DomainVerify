# ============================================
# Domain Verification Platform - Configuration
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================
# Application Configuration
# ============================================
APP_NAME="Domain Verify"
APP_URL=https://your-domain.com
NODE_ENV=production
PORT=5000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/dbname

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your-random-secret-key-here

# ============================================
# OIDC Authentication (works with any provider)
# ============================================
# Supported providers: Auth0, Google, Okta, Azure AD, Keycloak, etc.
# 
# For Auth0: https://YOUR_DOMAIN.auth0.com/
# For Google: https://accounts.google.com/
# For Okta: https://YOUR_DOMAIN.okta.com/oauth2/default
# For Azure AD: https://login.microsoftonline.com/YOUR_TENANT_ID/v2.0
# For Replit: https://replit.com/oidc

OIDC_ISSUER_URL=https://accounts.google.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_SCOPE=openid email profile

# ============================================
# Branding & Customization (Optional)
# ============================================
# Customize the look and feel of your platform

# Brand colors (hex format)
BRAND_PRIMARY_COLOR=#6366f1
BRAND_ACCENT_COLOR=#8b5cf6

# Company information
COMPANY_NAME="Your Company"
COMPANY_WEBSITE=https://your-company.com
SUPPORT_EMAIL=support@your-company.com

# Logo URLs (optional - leave empty for default text logo)
LOGO_URL=
LOGO_DARK_URL=

# Features (optional - set to 'false' to disable)
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=false

